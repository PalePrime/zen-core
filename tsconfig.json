{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2019",
		"outDir": "dist",
		"lib": ["ESNext"],
		"moduleResolution": "NodeNext",
		"declaration": true,
		"strict": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"out": "docs",
		"name": "ZenFS",
		"plugin": ["./scripts/typedoc-plugin.js"],
		"projectDocuments": ["documentation/*.md", "readme.md"]
	}
}
